      <Title>Use Strong SSL Configurations</Title>
      <Category>Communication Security</Category>
      <Phase>Implementation</Phase>
      <Technology>iOS</Technology>
      <Type>Guideline</Type>
      <DirectLink>Use Strong SSL Configurations</DirectLink>
      <Author />
      <Priority />
      <Status />
